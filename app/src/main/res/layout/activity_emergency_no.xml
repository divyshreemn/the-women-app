<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmergencyNoActivity"
    android:orientation="vertical"
    android:paddingLeft="50px"
    android:paddingRight="50px"
    android:layout_gravity="center"
    android:gravity="center">

    <Button
        android:id="@+id/callpolice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call Police"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="12dp"
        android:outlineProvider="background"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:backgroundTint="#000000"
        android:stateListAnimator="@null"
        android:elevation="15dp"
        android:background="@drawable/emergency_button" />
    <Button
        android:id="@+id/callambulence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call Ambulence"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="12dp"
        android:layout_marginTop="15dp"
        android:outlineProvider="background"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:backgroundTint="#000000"
        android:stateListAnimator="@null"
        android:elevation="15dp"
        android:background="@drawable/emergency_button" />
    <Button
        android:id="@+id/callfire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call Fire Brigade"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="12dp"
        android:layout_marginTop="15dp"
        android:outlineProvider="background"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:backgroundTint="#000000"
        android:stateListAnimator="@null"
        android:elevation="15dp"
        android:background="@drawable/emergency_button" />
    <Button
        android:id="@+id/womenhelpline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Women Helpline"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:padding="12dp"
        android:outlineProvider="background"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:backgroundTint="#000000"
        android:stateListAnimator="@null"
        android:elevation="15dp"
        android:background="@drawable/emergency_button" />
    <Button
        android:id="@+id/domesticviolence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Domestic Violence Helpline"
        android:textSize="24dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:padding="12dp"
        android:outlineProvider="background"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:backgroundTint="#000000"
        android:stateListAnimator="@null"
        android:elevation="15dp"
        android:background="@drawable/emergency_button" />


</LinearLayout>